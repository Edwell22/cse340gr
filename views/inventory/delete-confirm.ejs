<!-- Content Heading -->
<% if (title) { %>
    <h1 id="delete-inventory"><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<!-- Message -->
<%- messages() %>

<!-- Error Block for Server-Side Validation -->
<% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
    <% }) %>
    </ul>
<% } %>

<!-- Form -->
<div class="delete-inventory">
    <form id="deleteForm" class="deleteInv" action="/inv/delete" method="post">
        <h2>Delete Vehicle Inventory</h2>
        <label for="inv_make">Vehicle Make:</label><br>
        <input type="text" id="inv_make" name="inv_make" required value="<%= locals.inv_make %>"><br>
        <label for="inv_model">Vehicle Model:</label><br>
        <input type="text" id="inv_model" name="inv_model" required value="<%= locals.inv_model %>"><br>
        <label for="inv_price">Vehicle Price:</label><br>
        <input type="text" id="inv_price" name="inv_price" required value="<%= locals.inv_price %>"><br>

        <div class="button">
          <input type="submit" class="deleteInvButton" value="Delete Inventory"> 
        </div>

        <input type="hidden" name="inv_id"
        <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
        <% } %>>
        <p>Confirm deletion - The delete is permanent.</p>
    </form>

</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        handleClassificationSelect();
    })
    </script>